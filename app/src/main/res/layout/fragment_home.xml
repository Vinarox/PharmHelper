<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6sp">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<GridView
        android:id="@+id/grid_slot"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_margin="6sp"
        android:numColumns="2"
        android:verticalSpacing="6sp">
    </GridView>-->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#eeeeee"
        android:stretchColumns="*"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TableRow android:background="#cccccc"
        android:padding="5dp">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginRight="5sp"
            android:minHeight="120sp"
            android:background="@drawable/back">

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="6sp"
                android:text="Телефоны\nаптек"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/info_image1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_app_icon"
                android:padding="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginLeft="5sp"
            android:minHeight="120sp"
            android:background="@drawable/back">

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="6sp"
                android:text="Обратная\nсвязь"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/info_image2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_app_icon"
                android:padding="8dp"/>

        </RelativeLayout>
    </TableRow>
    </TableLayout>>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/user_cabinet"
        android:layout_width="200sp"
        android:layout_height="90sp"
        android:layout_margin="6sp">
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_pharm_near"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_margin="6sp"
        android:background="@color/light_back">

        <HorizontalScrollView
            android:id="@+id/hscroll_pharm_near"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_pharm_near"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Аптеки рядом"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_promotions"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_margin="6sp"
        android:background="@color/light_back">
        <HorizontalScrollView
            android:id="@+id/hscroll_promotions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_promotions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Акции"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_medicine"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_margin="6sp"
        android:background="@color/light_back">
        <HorizontalScrollView
            android:id="@+id/hscroll_medicine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/linear_medicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Популярные лекарства"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
</ScrollView>