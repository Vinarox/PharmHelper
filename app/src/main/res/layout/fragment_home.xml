        <LinearLayout
            android:id="@+id/linear_promotions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Акции"
                android:textSize="20dp"
                android:textStyle="bold|italic" />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scroll_promotions"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="6sp">
                <HorizontalScrollView
                    android:id="@+id/hscroll_promotions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/sales"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="200sp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sale1"
                            android:layout_margin="8sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/s1"
                            android:layout_margin="8sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/s2"
                            android:layout_margin="8sp"/>
                    </LinearLayout>

                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_medicine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Популярные лекарства"
                android:textSize="20dp"
                android:textStyle="bold|italic" />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scroll_medicine"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="6sp">
                <HorizontalScrollView
                    android:id="@+id/hscroll_medicine"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/pharms"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="180sp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/f1"
                            android:layout_margin="8sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/f2"
                            android:layout_margin="8sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/f3"
                            android:layout_margin="8sp"/>
                    </LinearLayout>

                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>